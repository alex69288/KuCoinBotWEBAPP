{
  "extends": "../backend/tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "esnext",
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "rootDir": "../",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": [
      "jest",
      "node",
      "@types/node",
      "@testing-library/jest-dom",
      "vite/client"
    ]
  },
  "include": [
    "./**/*.ts", // Указаны все тестовые файлы в папке tests
    "./**/*.js"
  ],
  "exclude": [
    "node_modules"
  ]
}