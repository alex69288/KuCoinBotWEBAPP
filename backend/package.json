{
  "name": "kucoin-bot-backend",
  "version": "1.0.0",
  "description": "Backend for KuCoin trading bot webapp in Telegram",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "test": "npm run build && jest",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop ecosystem.config.js"
  },
  "dependencies": {
    "bull": "^4.12.2",
    "ccxt": "^4.5.19",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "i18next": "^25.6.2",
    "i18next-fs-backend": "^2.6.0",
    "ml-random-forest": "^2.1.0",
    "node-telegram-bot-api": "^0.66.0",
    "protobufjs": "^7.5.4",
    "socket.io": "^4.7.4",
    "ts-node": "^10.9.2"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.10.5",
    "@types/node-telegram-bot-api": "^0.64.12",
    "jest": "^30.2.0",
    "nodemon": "^3.1.11",
    "pm2": "^5.3.0",
    "ts-jest": "^29.4.5",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.20.6",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src",
      "<rootDir>/../tests"
    ],
    "moduleNameMapper": {
      "^../backend/src/(.*)$": "<rootDir>/src/$1"
    },
    "testMatch": [
      "**/__tests__/**/*.test.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "transform": {
      "^.+\\.ts$": [
        "ts-jest",
        {
          "tsconfig": "../tests/tsconfig.json"
        }
      ]
    }
  }
}
